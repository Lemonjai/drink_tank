<h1><%= @drink.name %></h1>
<p>
	Drink: <%= @drink.option %><br/>
	Country: <%= @drink.country %><br/>
	Price: $<%= @drink.formatted_price %><br/>
</p>

<% if current_user %>
	<%= render 'bookmarks/form' %>
<% end %> <br/>


<%= link_to "Edit this drink", edit_drink_path %> | <%= link_to "Go back to list", drinks_path %> | <%= link_to "Delete", drink_path(@drink), method: :delete, data: {confirm: "Are you sure you want to delete this picture?"} %>
