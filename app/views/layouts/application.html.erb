<!DOCTYPE html>
<html>
<head>
  <title>DrinkTank</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
  <p class="userinfo">
    <% if current_user %>
      Signed in as <%= current_user.name %>, <%= link_to "Log out", session_path("current"), :method => :delete %> <%= link_to "Show User Information", user_path(current_user) %>
    <% else %>
      <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
  </header>
<%= yield %>
</body>
</html>
